{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "18.2.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "allowJs": true,
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@router/*": [
        "src/routes/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "mongo/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}